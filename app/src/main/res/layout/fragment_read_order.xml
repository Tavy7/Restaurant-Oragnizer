<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderItemsRecycler"
        android:layout_width="405dp"
        android:layout_height="520dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderEmpName"></androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/orderTableNumber"
        android:layout_width="123dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:text="TableNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderEmpName"
        android:layout_width="123dp"
        android:layout_height="39dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="15dp"
        android:text="Emp Name"
        app:layout_constraintStart_toEndOf="@+id/orderTableNumber"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderTotalPrice"
        android:layout_width="235dp"
        android:layout_height="43dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:text="Total"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderItemsRecycler" />

    <Button
        android:id="@+id/sendOrderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:text="Send Order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderTotalPrice" />

    <Button
        android:id="@+id/AddItemsToOrderBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add items"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sendOrderButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderTotalPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>