<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/AdminContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/AdminCustomerBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Customers"
            android:textSize="24sp"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/AdminEmpBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Employees"
            android:textSize="24sp"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/AdminItemBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Items"
            android:textSize="24sp"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/AdminOrdersBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Orders"
            android:textSize="24sp"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/AdminSchBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Schedules"
            android:textSize="24sp"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/AdminTableBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Tables"
            android:textSize="24sp"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/AdminUsersBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Users"
            android:textSize="24sp"
            android:paddingTop="20dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>